<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Booking Service</title>
  <!-- Shared styles (single source of truth) -->
  <link rel="stylesheet" href="<%= sharedAssetsUrl %>/css/base.css">
  <!-- Service-specific styles -->
  <link rel="stylesheet" href="<%= basePath %>/static/css/style.css">
</head>
<body>
  <!-- Header loaded from shared partials -->
  <header class="header"></header>

  <main class="main">
    <div class="container">
      <%- body %>
    </div>
  </main>

  <!-- Footer loaded from shared partials -->
  <footer class="footer"></footer>

  <!-- Shared assets configuration (from environment) -->
  <script>
    window.SHARED_CONFIG = {
      baseUrl: '<%= sharedAssetsUrl %>',
      cache: true,
      version: '<%= sharedAssetsVersion %>'
    };
  </script>
  <!-- Shared scripts -->
  <script src="<%= sharedAssetsUrl %>/js/event-bus.js"></script>
  <script src="<%= sharedAssetsUrl %>/js/auth.js"></script>
  <script src="<%= sharedAssetsUrl %>/js/loader.js"></script>
  <script src="<%= sharedAssetsUrl %>/js/debug-panel.js"></script>
  <!-- Service-specific scripts -->
  <script src="<%= basePath %>/static/js/main.js"></script>
</body>
</html>
